#search-box-container
  .row-fluid
    =form_tag search_path, :method => 'get' do
      .col-lg-12
        .input-group
          = text_field_tag :q, params[:q] || (@word ? @word.chars_trad : nil) || "Search/Translate Words", :class => "search_input form-control"
          %span.input-group-btn
            %button#search-submit.btn.btn-default{type: "button"}
              .glyphicon.glyphicon-search

        / /input-group
      / /.col-lg-12
  / /.row


.example-search-container
  e.g. 
  =raw "#{link_to "你", "#", :class => "example-search"}, #{link_to "you", "#", :class => "example-search"}, #{link_to "屌你老母", "#", :class => "example-search"}"